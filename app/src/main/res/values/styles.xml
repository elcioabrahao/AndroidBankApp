<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecundary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorSecundary</item>
        <item name="colorControlHighlight">@color/colorSecundary</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorSecundary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/colorSecundary</item>
    </style>

    <style name="HelveticaNeueLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/HelveticaNeue-Light.ttf</item>
    </style>

    <style name="HelveticaNeue" parent="android:TextAppearance">
        <item name="fontPath">fonts/helvetica-neue.ttf</item>
    </style>

</resources>
